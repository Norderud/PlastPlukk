<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.PhotoGPSActivity"
    android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Ta bilde!"
        android:textSize="24dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/photoDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2">
        <Button
            android:id="@+id/kameraKnapp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/ta_bilde"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/videreFraKamera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/last_opp_bilde"
            android:layout_weight="1"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>